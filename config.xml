<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kinch.sportstore" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AngularJS-K</name>
    <description>
        Sports Store in Angularjs
    </description>
    <author email="jinqiqiqi@gmail.com" href="http://kinch.io">
        JinQi@Eric.King Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-camera" spec="^1.2.0" />
    <access origin="http://*" />
    <access origin="https://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="KeepRunning" value="false" />
    <preference name="LoadUrlTimeoutValue" value="10000" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="LoadingDialog" value="Kinch's App is loading..." />
    <preference name="LoadingPageDialog" value="K loading..." />
    <preference name="ShowTitle" value="true" />
    <preference name="SetFullscreen" value="true" />
    <!-- <preference name="Orientation" value="landscape" /> -->
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.CameraLauncher"/>
    </feature>
    <feature name="Contacts">
        <param name="android-package" value="org.apache.cordova.ContactManager"/>
    </feature>
</widget>
